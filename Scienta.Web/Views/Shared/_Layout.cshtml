
@{
    Layout = null;
}

 
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scienta - Bilimsel Makaleler Keşfet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;800&family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/mainpage.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light fixed-top">



        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-flask logo-icon"></i> Scienta
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#"><i class="fa-solid fa-house me-1"></i>Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#articles"><i class="fa-solid fa-newspaper me-1"></i>Makaleler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#articles"><i class="fa-solid fa-tree me-1"></i>Evrim Ağacı</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#articles"><i class="fa-solid fa-flask me-1"></i>Populer Science</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#articles"><i class="fa-solid fa-lightbulb me-1"></i>BilimFili</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-circle-info me-1"></i>Hakkında</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-address-book me-1"></i>İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   

   
        @RenderBody()
   

    <footer class="text-white">
        <div class="container">
            <p class="mb-2">&copy; @DateTime.Now.Year Scienta. Tüm Hakları Saklıdır.</p>
            <div class="social-icons">
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navbar = document.querySelector('.navbar');
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        });
    </script>
</body>
</html>