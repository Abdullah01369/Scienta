@using Scienta.Services.Models

@{
    Layout = null;
}

@model List<ArticleModel>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Blog Sayfam (Tek Dosya)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* Genel Stil Ayarları */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            color: #333;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }

        .text-primary {
            color: #007bff !important; /* Bootstrap'ın birincil rengini kullan */
        }

        .bg-primary {
            background-color: #007bff !important;
        }

        /* Navbar */
        .navbar-brand {
            color: #333 !important;
            letter-spacing: 0.5px;
        }

            .navbar-brand:hover {
                color: #007bff !important;
            }

        .navbar-nav .nav-link {
            color: #555 !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #007bff !important;
            }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1488197777894-399a0ed3f393?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center;
            background-size: cover;
            min-height: 450px; /* Daha büyük bir hero alanı */
            display: flex;
            align-items: center;
            justify-content: center;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }

            .hero-section h1 {
                font-size: 3.5rem;
            }

            .hero-section .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                padding: 0.8rem 2rem;
                font-size: 1.1rem;
                transition: background-color 0.3s ease, border-color 0.3s ease;
            }

                .hero-section .btn-primary:hover {
                    background-color: #0056b3;
                    border-color: #0056b3;
                }

        /* Blog Posts Section */
        .blog-posts-section {
            background-color: #ffffff; /* Arka planı beyaz yap */
            padding-top: 60px;
            padding-bottom: 60px;
        }

        .text-dark-blue {
            color: #212529; /* Daha koyu bir başlık rengi */
        }

        .blog-card {
            border: none; /* Kart kenarlığını kaldır */
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

            .blog-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* Daha belirgin bir gölge */
            }

            .blog-card img {
                width: 100%;
                height: 220px; /* Görselin yüksekliğini biraz artır */
                object-fit: cover;
                border-top-left-radius: 12px;
                border-top-right-radius: 12px;
            }

            .blog-card .card-body {
                padding: 1.5rem;
            }

            .blog-card .category-badge {
                font-size: 0.75rem;
                font-weight: 600;
                padding: 0.4em 0.8em;
                border-radius: 50px; /* Tam yuvarlak */
                display: inline-block; /* Daha düzgün hizalama */
            }

            .blog-card .card-title {
                font-size: 1.4rem; /* Başlık boyutunu artır */
                line-height: 1.3;
                margin-bottom: 1rem;
                color: #333;
            }

            .blog-card .card-text {
                font-size: 0.85rem;
                line-height: 1.5;
            }

                .blog-card .card-text i {
                    color: #007bff; /* İkon rengini vurgula */
                }

            .blog-card .btn-outline-primary {
                border-color: #007bff;
                color: #007bff;
                transition: all 0.3s ease;
            }

                .blog-card .btn-outline-primary:hover {
                    background-color: #007bff;
                    color: #fff;
                }

            .blog-card .card-footer {
                background-color: #f7f9fc; /* Hafif mavi bir arka plan */
                border-top: 1px solid #e0e0e0;
                padding: 1rem 1.5rem;
            }

            .blog-card .author-info img {
                width: 35px;
                height: 35px;
                object-fit: cover;
                border: 2px solid #007bff; /* Yazar avatarına çerçeve */
            }

            .blog-card .author-info small {
                font-weight: 500;
            }

            .blog-card .card-footer i {
                color: #6c757d; /* Footer ikon rengi */
            }

            .blog-card .card-footer small {
                font-size: 0.8rem;
            }


        /* Call to Action */
        .cta-section {
            background: linear-gradient(45deg, #007bff, #0056b3); /* Geçişli arka plan */
            padding: 80px 0;
            box-shadow: inset 0 5px 15px rgba(0, 0, 0, 0.2);
        }

            .cta-section .form-control {
                border-radius: 50px;
                padding: 0.75rem 1.25rem;
                border: none;
            }

            .cta-section .btn-primary {
                border-top-right-radius: 50px;
                border-bottom-right-radius: 50px;
                padding: 0.75rem 1.5rem;
                font-weight: 600;
            }

        /* Footer */
        .footer {
            background-color: #212529; /* Koyu tema için */
            color: #f8f9fa;
            font-size: 0.9rem;
            padding: 25px 0;
        }
    </style>
</head>
<body>

  

    

    <section id="blog-posts" class="blog-posts-section py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold text-dark-blue">Son Yazılarımız</h2>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in Model)
                {

                    <div class="col">
                        <div class="card blog-card h-100 shadow-sm">
                            <img src="@item.img" class="card-img-top ">
                            <div class="card-body d-flex flex-column">
                                 <h5 class="card-title fw-bold"> @item.title</h5>
                                <p class="card-text text-muted small mt-auto">
                                    <i class="far fa-calendar-alt me-1"></i> 9 Mayıs 2025
                                </p>
                                <a href="@item.href" class="btn btn-outline-primary btn-sm mt-3 align-self-start">Devamını Oku <i class="fas fa-chevron-right ms-1"></i></a>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center bg-light-blue py-3">
                                <div class="author-info d-flex align-items-center">
                                    @item.from
                                    <img src="~/img/popsci-favicon.png" class="rounded-circle me-2" />
                                 </div>
                                
                            </div>
                        </div>
                    </div>
                }



            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>